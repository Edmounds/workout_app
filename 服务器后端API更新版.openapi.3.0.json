              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer"
                    },
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer"
                        },
                        "openid": {
                          "type": "string"
                        },
                        "username": {
                          "type": "string"
                        },
                        "gender": {
                          "type": "integer",
                          "description": "0:未知, 1:男, 2:女"
                        },
                        "age": {
                          "type": "integer"
                        },
                        "height": {
                          "type": "number"
                        },
                        "weight": {
                          "type": "number"
                        },
                        "level": {
                          "type": "string"
                        },
                        "total_workouts": {
                          "type": "integer"
                        },
                        "total_duration": {
                          "type": "integer"
                        },
                        "total_distance": {
                          "type": "number"
                        },
                        "created_at": {
                          "type": "string",
                          "format": "date-time"
                        },
                        "updated_at": {
                          "type": "string",
                          "format": "date-time"
                        },
                        "token": {
                          "type": "string"
                        }
                      }
                    }
                  }
                },
                "example": {
                  "code": 200,
                  "message": "登录成功",
                  "data": {
                    "id": 1,
                    "openid": "abcd1234xyz",
                    "username": "test_user",
                    "gender": 1,
                    "age": 28,
                    "height": 175.5,
                    "weight": 70.2,
                    "level": "intermediate",
                    "total_workouts": 56,
                    "total_duration": 3240,
                    "total_distance": 342.5,
                    "created_at": "2025-01-15T08:30:00Z",
                    "updated_at": "2025-05-20T16:45:00Z",

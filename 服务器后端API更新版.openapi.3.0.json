          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "description": "用户名(4-20位字符)"
                  },
                  "password": {
                    "type": "string",
                    "description": "密码(8-20位,需含大小写字母和数字)"
                  }
                },
                "required": ["username", "password"]
              },
              "example": {
                "username": "test_user",
                "password": "Password123"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "成功",
